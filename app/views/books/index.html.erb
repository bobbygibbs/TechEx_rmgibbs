<h1>Booklist</h1>
<table>
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Year</th>
		<th>Pages</th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.author %></td>
			<td><%= book.year %></td>
			<td><%= book.pages %></td>
			<td><%= link_to 'delete', book_path(book), method: :delete, data: { confirm: 'Are you sure you would like to delete this book from the list?' } %></td>
		</tr>
	<% end %>
</table>
<%= form_for :book do |f| %>
<ul>
	<li>
		<%= f.label :title %>
		<br>
		<%= f.text_field :title %>
	</li>
	<li>
		<%= f.label :author %>
		<br>
		<%= f.text_field :author %>
	</li>
	<li>
		<%= f.label :year %>
		<br>
		<%= f.text_field :year %>
	</li>
	<li>
		<%= f.label :pages %>
		<br>
		<%= f.text_field :pages%>
	</li>
	<br>
	<li>
		<%= f.submit %>
	</li>
</ul>
<% end %>
